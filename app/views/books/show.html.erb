<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user:@user  %>

			<h2>New book</h2>
			<%= render 'books/newform', book:@newbook  %>

		</div>

		<div class="col-xs-9">

			<h2>Book detail</h2>
			<% if @book_comment && @book_comment.errors.any? %>
	    <h1><%= @book_comment.errors.count %>errors prohibited this obj from being saved:</h1>
	    <ul>
	        <% @book_comment.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	    </ul>
	    <% end %>

			<table class="table">
					<tr>
						<td>
							<%= link_to (@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book.user.name %>
							<% end %>
						</td>
						<td><%= link_to @book.title, @book %></td>
						<td><%= @book.body %></td>
						<% if @book.favorited_by?(current_user) %>
						  <td>
						    <%= link_to book_favorites_path(@book), method: :delete do %>
						      <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
						      <%= @book.favorites.count %>
						    <% end %>
						  </td>
						<% else %>
						  <td>
						    <%= link_to book_favorites_path(@book), method: :post do %>
						      <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
						      <%= @book.favorites.count %>
						    <% end %>
						  </td>
						<% end %>
						<% if @user == current_user %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
						<%end%>
					</tr>
			</table>
	    <% @book.book_comments.each do |book_comment| %>
	        <li class="comment">
	            <div class="comment-body bb">
	                <div class="comment-text">
	                    <div class="comment-author clearfix">
	                        <a><%= book_comment.user.name %></a>
	                        <span class="comment-meta">
	                          <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
	                        </span>
	                    </div>
	                    <div class="comment-entry"><%= book_comment.comment %></div>
	                </div>
	            </div>
	        </li>
	    <% end %>
			<%= form_for [@book, @book_comment] do |f| %>
        <%= f.text_area :comment %>
		    <%= f.submit "送信", class: "pull-right" %>
			<% end %>

		</div>
	</div>
</div>

